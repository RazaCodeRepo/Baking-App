<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_sixteen">

      <android.support.v7.widget.CardView
          android:id="@+id/card_view"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_hundred"
          android:padding="@dimen/padding_sixteen">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/recipe_image"
                  android:layout_width="@dimen/dimen_hundred"
                  android:layout_height="match_parent"
                  android:paddingRight="@dimen/padding_ten"
                  android:paddingTop="@dimen/padding_twenty"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="@dimen/padding_ten"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/tv_recipe_name_item"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:textAppearanceLarge"
                      android:paddingLeft="@dimen/padding_ten"
                      android:paddingBottom="@dimen/padding_ten"
                      android:paddingTop="@dimen/padding_twenty"
                      android:textColor="@color/colorIngredient"/>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingLeft="@dimen/padding_ten">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:textAppearanceMedium"
                          android:text="@string/recipe_serving_text"/>

                      <TextView
                          android:id="@+id/tv_recipe_serving"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:textAppearance="?android:textAppearanceMedium"
                          android:paddingLeft="@dimen/padding_ten"
                          android:textColor="@color/colorIngredient"/>

                  </LinearLayout>

              </LinearLayout>

          </LinearLayout>



      </android.support.v7.widget.CardView>
</LinearLayout>

